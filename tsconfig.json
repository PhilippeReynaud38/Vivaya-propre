{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    /* ─────────── AJOUTS alias @/ ─────────── */
    "baseUrl": ".",          // racine du projet
    "paths": {
      "@/*": ["./*"]         // @/lib/xxx -> ./lib/xxx
    }
    /* ─────────────────────────────────────── */
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],

  "exclude": ["node_modules"]
}
